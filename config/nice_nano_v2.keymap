#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    /* 1キーだけの「直結」キースキャン */
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios = <&gpio0 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
    };

    chosen {
        zmk,kscan = &kscan0;
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp X
            >;
        };
    };
};
