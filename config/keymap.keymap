# config/keymap.keymap

// 最低限のキー1個テスト用

default_layer {
    bindings = <&kp A>;
};


# config/board.overlay

/ {
    chosen {
        zmk,inputs = &inputs;  // 入力デバイス定義
    };

    inputs: inputs {
        compatible = "zmk,inputs";
        // ここでは GPIO0 ポートの 6 番ピン(P0.06) を使用
        input-gpios = <&gpio0 6 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
    };
};


